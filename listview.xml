<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_fulltime"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_boy"

        />

    <TextView
        android:id="@+id/textnamefull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/im_fulltime"
        android:layout_toRightOf="@+id/im_fulltime"
        android:padding="8dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textagefull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textnamefull"
        android:layout_toRightOf="@+id/im_fulltime"
        android:padding="8dp"
        android:text="22"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textgenfull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textagefull"
        android:layout_alignBottom="@+id/textagefull"
        android:layout_marginStart="92dp"
        android:layout_toEndOf="@+id/textagefull"
        android:text="gender"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/threedots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:background="@color/md_teal_300"
        android:onClick="showPopup"
        android:src="@drawable/ic_more" />


</RelativeLayout>